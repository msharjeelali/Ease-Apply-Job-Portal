<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    tools:context=".RegisterActivity">

    <!-- Logo for Ease Apply -->
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/bagel_fat_one"
        android:text="Ease Apply"
        android:textColor="#2F930B"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <!-- Tagline for Registration Activity Ease Apply -->
    <TextView
        android:id="@+id/registerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-thin"
        android:text="Build Your Future â€“ Register Now"
        android:textAlignment="center"
        android:textColor="#212121"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <!-- Fragment Switch Buttons -->
    <LinearLayout
        android:id="@+id/fragmentButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerTitle"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonEmployeeFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:backgroundTint="#ffffff"
            android:text="Employee"
            android:textColor="@color/black"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/buttonEmployerFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:backgroundTint="#F5F5F5"
            android:text="Employer"
            android:textColor="@color/black"
            tools:ignore="ButtonStyle,HardcodedText" />

    </LinearLayout>

    <!-- Register Fragment Container -->
    <FrameLayout
        android:id="@+id/containerRegisterFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragmentButtons"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        tools:ignore="ObsoleteLayoutParam" />

    <!-- Login Button -->
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/containerRegisterFragment"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#ffffff"
        android:elevation="4dp"
        android:fontFamily="sans-serif-medium"
        android:minHeight="48dp"
        android:padding="12dp"
        android:text="Login"
        android:textColor="#2F930B"
        tools:ignore="HardcodedText,VisualLintButtonSize,TouchTargetSizeCheck,TextContrastCheck" />

</RelativeLayout>